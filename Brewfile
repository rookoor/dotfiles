# Brewfile for automated dotfiles setup
# Usage: brew bundle --file=~/dotfiles/Brewfile

# Taps
tap "homebrew/cask"
tap "homebrew/cask-fonts"
tap "koekeishiya/formulae"

# Core Development Tools
brew "git"
brew "node"
brew "nvm"

# Terminal & Shell
brew "tmux"
brew "alacritty"
brew "bash"
brew "bash-completion@2"

# Window Management
brew "yabai"
brew "skhd"

# Git Tools
brew "gh"              # GitHub CLI
brew "git-delta"       # Better git diff
brew "lazygit"         # Terminal UI for git
brew "tig"             # Text-mode interface for git

# System Monitoring
brew "htop"
brew "btop"
brew "neofetch"

# Editor
brew "neovim"

# Nice-to-have CLI Tools
brew "tree"            # Directory visualization
brew "wget"            # File downloads
brew "jq"              # JSON processor
brew "fzf"             # Fuzzy finder

# Casks (GUI Applications)
cask "karabiner-elements"             # Keyboard customization (Caps â†” Esc, Cmd+HJKL navigation)
cask "font-jetbrains-mono-nerd-font"  # Good terminal font with icons
cask "font-fira-code-nerd-font"       # Alternative nerdfont

# Optional but useful
# cask "visual-studio-code"
# cask "docker"
# cask "iterm2"

