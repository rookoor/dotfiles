[user]
	name = rookoor
	email = 62902592+rookoor@users.noreply.github.com

[core]
	editor = nvim
	autocrlf = input
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple
	followTags = true

[fetch]
	prune = true

[diff]
	tool = vimdiff
	colorMoved = zebra

[merge]
	tool = vimdiff
	conflictstyle = diff3

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	# Short status
	s = status -s

	# Pretty log
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	# Show last commit
	last = log -1 HEAD

	# Amend last commit
	amend = commit --amend

	# Unstage files
	unstage = reset HEAD --

	# Discard changes
	discard = checkout --

	# Show branches
	br = branch -v

	# Quick commit
	c = commit -m

	# Quick add and commit
	ac = !git add -A && git commit -m

	# Checkout
	co = checkout

	# Pull with rebase
	pr = pull --rebase

	# List aliases
	aliases = config --get-regexp alias

	# Show contributors
	contributors = shortlog --summary --numbered

	# Undo last commit (keep changes)
	undo = reset HEAD~1 --mixed

	# Show what changed in last commit
	dl = diff HEAD~1 HEAD

[help]
	autocorrect = 1

[credential]
	helper = osxkeychain

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
